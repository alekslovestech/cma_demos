{
    "compilerOptions": {
        "outDir": "./built",
        "allowJs": false,
        "target": "es2017",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": true,
        "esModuleInterop": true,
        //"noImplicitAny": true,
        "module": "commonjs",
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "contentTypes",
        "./built"
    ]
}